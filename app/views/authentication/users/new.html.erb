<%= form_with(model: @user) do |form| %>
  <% @user.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email, required: true %>
  </div>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username, required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.text_field :password, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
